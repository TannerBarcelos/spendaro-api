{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/**/*.ts","global.d.ts"],
}

{
  "name": "spendaro-api",
  "version": "1.0.0",
  "description": "Official Spendaro Budgeting App API Server",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node index.js",
    "dev": "NODE_ENV=development tsnd -r tsconfig-paths/register --respawn --transpile-only --exit-child src/index.ts",
    "format": "prettier --write \"**/*.ts\"",
    "db:generate-migration": "drizzle-kit generate",
    "db:migrate": "tsnd -r tsconfig-paths/register migrate.ts",
    "db:seed": "src/db/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/swagger": "^9.1.0",
    "@scalar/fastify-api-reference": "^1.25.27",
    "@scalar/themes": "^0.9.33",
    "@scalar/types": "^0.0.12",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "config": "^3.3.12",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "fastify": "^5.0.0",
    "fastify-api-reference": "link:@types/@scalar/fastify-api-reference",
    "fastify-plugin": "^5.0.1",
    "http-status-codes": "^2.3.0",
    "postgres": "^3.4.4",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/config": "^3.3.5",
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.24.2",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  }
}

{
  "name": "spendaro-api",
  "type": "module",
  "version": "1.0.0",
  "description": "Official Spendaro Budgeting App API Server",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",

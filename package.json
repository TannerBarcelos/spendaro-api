    "@types/config": "^3.3.5",
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
